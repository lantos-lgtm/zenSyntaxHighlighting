{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Zen programing language",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.zen",
					"match": "\\b(=|\\+|\\-|\\*|\\/|\\%|\\^|\\&|\\||\\~|\\!|\\>|\\<|\\?|\\:|\\,|\\.)\\b"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.zen",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.zen",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.zen",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.zen",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.zen",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.double-slash.zen",
			"begin": "//",
			"end": "\n"
		},
		"numbers": {
			"name": "constant.numeric.zen",
			"match": "\\b\\d+\\b"
		}
	},
	"scopeName": "source.zen"
}