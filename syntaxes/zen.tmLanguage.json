{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Zen programing language",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},

		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.double-slash.zen",
			"begin": "//",
			"end": "\n"
		},
		"numbers": {
			"name": "constant.numeric.zen",
			"match": "\\b\\d+\\b"
		},
		"strings": {
			"name": "string.quoted.double.zen",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.zen",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.zen",
					"match": "\\b(=|\\+|\\-|\\*|\\/|\\%|\\^|\\&|\\||\\~|\\!|\\>|\\<|\\?|\\:|\\,|\\.)\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.zen",
					"match": "\\b(if|while|for|return|args|body)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.zen",
					"match": "\\b([A-Z][)\\b"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.name",
					"match": "\\b(w+):\\b",
					"captures": {
						"1": {
							"name": "variable.name"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.zen"
}